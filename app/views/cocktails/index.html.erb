<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bar</th>
      <th>Name</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.user_id %></td>
        <td><%= cocktail.bar_id %></td>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.recipe %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>

<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <h1 class="display-4">
      Feed
    </h1>
    <% if current_user.leaders.cocktails.exists? %>
      <p class="lead text-muted">Recent cocktails from people you follow</p>
      <% current_user.leaders.own_cocktails.each do %>
        <div class="row mb-4">
          <div class="col-md-6 offset-md-3">
            <%= render "cocktails/cocktail", cocktail: cocktail %>
          </div>
        </div>
      <% end %>
    <% else %>
      You aren't following anyone!
    <% end %>
  </div>
</div>