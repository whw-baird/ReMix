<p id="notice"><%= notice %></p>

<h1>Barflies</h1>

<table>
  <thead>
    <tr>
      <th>Bar</th>
      <th>User</th>
      <th>Is bartender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barflies.each do |barfly| %>
      <tr>
        <td><%= barfly.bar_id %></td>
        <td><%= barfly.user_id %></td>
        <td><%= barfly.is_bartender %></td>
        <td><%= link_to 'Show', barfly %></td>
        <td><%= link_to 'Edit', edit_barfly_path(barfly) %></td>
        <td><%= link_to 'Destroy', barfly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Barfly', new_barfly_path %>
